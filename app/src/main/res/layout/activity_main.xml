<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android= "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9DD3E9"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/coffeebar" />
        <EditText
            android:id="@+id/album_description_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:hint="Enter your Name"
            android:inputType="textMultiLine" />

        <TextView

            android:id="@+id/hbd_tet_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            style="@style/header_text_style"
            android:text="TOPPINGS"
            android:textAllCaps="true"
            android:textColor="#FFFF00"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/notify_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:layout_marginLeft="16dp"
            android:text="Biscuit"
            android:textSize="16sp"
            android:onClick="notify_me_checkbox_fn"
            android:textAppearance="?android:textAppearanceMedium" />
        <CheckBox
            android:id="@+id/notify_me_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:layout_marginLeft="16dp"
            android:text="Cholcolate"
            android:textSize="16sp"
            android:onClick="notify_me_chocolate_fn"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/hbd_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Quantity"
            style="@style/header_text_style"
            android:textAllCaps="true"
            android:textColor="#FFFF00"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="#9DD3E9"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minus_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:onClick="submitMinus"
                android:text="-" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="monospace"
                android:paddingLeft="0dp"
                android:textColor="#FFFF00" />

            <Button
                android:id="@+id/plus_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:onClick="submitPlus"
                android:text="+" />

        </LinearLayout>


